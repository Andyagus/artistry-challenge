<% if flash[:my_errors] %>
	<% flash[:my_errors].each do |error| %>
	<%= error %>
	<% end %>
<% end %>

<%= form_for @artist do |f| %>
	Name: <%= f.text_field :name %><br />
	Age: <%= f.number_field :age %><br />
	Title: <%= f.text_field :title %><br />
	<%=f.collection_select(:instruments, Instrument.all, :id, :name) %>
  <%= f.submit %>
<% end %>

